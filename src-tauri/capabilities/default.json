{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://store.steampowered.com"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:write-files",
      "allow": [{ "path": "**" }]
    },
    "dialog:default"
  ]
}